<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javacodereviewer.controller.MainController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2c3e50;">
               <children>
                  <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="AI-Powered Java Code Reviewer" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#openSettings" style="-fx-background-color: #34495e; -fx-text-fill: white;" text="Settings" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="loadFileButton" mnemonicParsing="false" onAction="#loadFile" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Load File" />
                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearCode" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Clear" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="API Provider:" />
                  <ComboBox fx:id="apiProviderCombo" prefWidth="150.0" />
                  <Button fx:id="reviewButton" mnemonicParsing="false" onAction="#reviewCode" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Review Code" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
         <items>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Java Code Input" />
                  <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
                     <content>
                        <TextArea fx:id="codeInputArea" prefHeight="400.0" promptText="Paste your Java code here or load from file..." style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 12px;" wrapText="false" />
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
               </padding>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="AI Review Results" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportReport" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" text="Export Report" />
                     </children>
                  </HBox>
                  <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
                     <content>
                        <VBox fx:id="resultsContainer" spacing="5.0" />
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #ecf0f1;">
         <children>
            <Label fx:id="statusLabel" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
         </children>
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>

